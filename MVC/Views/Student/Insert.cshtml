@* @* @model SRS_MVC.Models.tblStudent
@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <h2 class="mb-4">Student Registration</h2>

    <form asp-controller="Student" asp-action="Insert" method="post" enctype="multipart/form-data">

        <div class="row">
            <div class="col-md-6">
                <!-- Student Name -->
                <div class="form-group">
                    <label for="Name">Student Name:</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <!-- Student DOB -->
                <div class="form-group">
                    <label for="Dob">Student DOB:</label>
                    <input asp-for="Dob" type="date" class="form-control" />
                </div>

                <!-- Student Gender -->
                <div class="form-group">
                    <label>Student Gender:</label>
                    <div class="form-check">
                        <input asp-for="Gender" type="radio" value="Male" class="form-check-input" />
                        <label class="form-check-label">Male</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Gender" type="radio" value="Female" class="form-check-input" />
                        <label class="form-check-label">Female</label>
                    </div>
                </div>

                <!-- Student Address -->
                <div class="form-group">
                    <label for="Address">Student Address:</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Checkboxes for a list of values -->
                <div class="form-group">
                    <label>Languages:</label>
                    <div class="form-check">
                        <input type="checkbox" id="english" name="languages" value="English" class="form-check-input" />
                        <label for="english" class="form-check-label">English</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" id="spanish" name="languages" value="Spanish" class="form-check-input" />
                        <label for="spanish" class="form-check-label">Spanish</label>
                    </div>
                    <!-- Add more checkboxes as needed -->
                </div>

                <!-- Course Dropdown -->
                <div class="form-group">
                    <label for="Course">Course:</label>
                    @Html.DropDownList("Course", ViewBag.Courses as SelectList, "-- Select Course --", new { @class = "form-control" })
                </div>

               <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
            </div>

            <div class="mb-3">
                <label for="document" class="form-label">Document</label>
                <input type="file" class="form-control" id="document" name="document" accept=".pdf, .doc, .docx" required>
            </div>

                <!-- Phone Number -->
                <div class="form-group">
                    <label for="PhoneNumber">Phone Number:</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div> *@


